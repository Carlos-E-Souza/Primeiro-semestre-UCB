algoritmo Area_circulo;
// Síntese
//  Objetivo:  Calcular a área do círculo
//  Entrada : Raio do círculo
//  Saída   : Área do círculo


principal
	// Declarações
real raio;
real area;
	// Instruções
escreva("Qual o tamanho do raio ? ");
leia(raio);
area = raio*3.14;
escreval(area, " É a área desse círculo");

fimPrincipal
